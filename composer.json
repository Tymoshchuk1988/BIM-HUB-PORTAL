{
    "name": "bimhub/portal",
    "description": "BIM Hub Portal - Портал інформаційного моделювання будівель",
    "type": "project",
    "license": "MIT",
    "authors": [
        {
            "name": "Tymoshchuk1988",
            "email": "tymoshchuk1988@gmail.com"
        }
    ],
    "require": {
        "php": "^8.2",
        "ext-json": "*",
        "ext-pdo": "*",
        "vlucas/phpdotenv": "^5.5",
        "firebase/php-jwt": "^6.4",
        "ramsey/uuid": "^4.7",
        "monolog/monolog": "^3.3",
        "guzzlehttp/guzzle": "^7.5",
        "psr/container": "^2.0",
        "psr/http-message": "^2.0",
        "psr/log": "^3.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^10.0",
        "squizlabs/php_codesniffer": "^3.7",
        "phpstan/phpstan": "^1.10",
        "mockery/mockery": "^1.6",
        "fakerphp/faker": "^1.23"
    },
    "autoload": {
        "psr-4": {
            "BIMHub\\": "src/"
        },
        "files": [
            "src/Utils/Helpers/functions.php"
        ]
    },
    "autoload-dev": {
        "psr-4": {
            "BIMHub\\Tests\\": "tests/"
        }
    },
    "scripts": {
        "test": "phpunit",
        "phpcs": "phpcs --standard=PSR12 src/ tests/",
        "phpcbf": "phpcbf --standard=PSR12 src/ tests/",
        "phpstan": "phpstan analyse src/ --level=max",
        "analyse": [
            "@phpcs",
            "@phpstan",
            "@test"
        ],
        "post-autoload-dump": [
            "@php -r \"file_exists('.env') || copy('.env.example', '.env');\""
        ]
    },
    "config": {
        "sort-packages": true,
        "platform-check": true,
        "allow-plugins": {
            "dealerdirect/phpcodesniffer-composer-installer": true
        }
    },
    "minimum-stability": "stable",
    "prefer-stable": true
}
